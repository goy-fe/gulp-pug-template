doctype html
html(lang="zh-CN")
  head
    meta(charset="UTF-8")
    meta(name="renderer", content="webkit")
    meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
    if description && keywords
      meta(name="description" content=description)
      meta(name="keywords" content=keywords)
    link(rel="shortcut icon", href="./static/favicon.ico")

    //- page title
    block title
      if local.title
        title=`${local.title} | ${siteTitle}`
      else
        title=siteTitle

    //- global styles
    if styles
      each style in styles
        link(rel="stylesheet", href=style)

    //- local styles
    if local.styles
      each style in local.styles
        link(rel="stylesheet", href=style)
  body
    .container
      block content

    //- global scripts
    if (scripts)
      each script in scripts
        script(src=script)

    //- local scripts
    if local.scripts
      each script in local.scripts
        script(src=script)
